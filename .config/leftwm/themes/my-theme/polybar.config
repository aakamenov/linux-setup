[color]
background = #2C2C2C
foreground = #E5E4E2

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = true

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/mainbar0]
enable-ipc = true

width = ${env:width}
;width = 100%
height = 32
offset-x = 8
offset-y = 8
monitor = ${env:monitor}
fixed-center = true
bottom = false

background = ${color.background}
foreground = ${color.foreground}

radius = 16.0

line-size = 3
line-color = #f00

padding-left = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "ShureTechMono Nerd Font:size=14:weight=semibold;3"

modules-center = player player-play-pause
modules-right = cpu memory pulseaudio sysmenu
modules-left = workspace0 date

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0
tray-background = ${color.background}

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

#####################################################################

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %gb_used%/%gb_total%

[module/date]
type = internal/date
interval = 5
time = %H:%M %p
time-alt = %d/%m/%Y %H:%M %p
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false
interval = 5

format-volume = <ramp-volume> <label-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 墳
ramp-volume-3 = 

label-muted = 

click-right = pavucontrol

[module/player]
type = custom/script
tail = true
format =  <label>
exec = $SCRIPTPATH/scripts/player_scroll_status.sh

[module/player-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo "契"
initial = 1
click-left = playerctl play-pause -p musikcube

[module/sysmenu]
type = custom/text
content = " 襤 "
content-foreground = ${color.foreground}
click-left = arcolinux-logout
click-right = arcolinux-logout
