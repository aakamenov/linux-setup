[color]
;background = ${xrdb:color0:#222}
background = #1e1f29
;background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #f8f8f2
;foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
modulefg = #f7f7f7
modulefg-alt = #f7f7f7

; Active Shade
shade1 = #282629
shade2 = #37474F
shade3 = #455A64
shade4 = #546E7A
shade5 = #607D8B
shade6 = #78909C
shade7 = #90A4AE
shade8 = #B0BEC5

trans = #00000000
white = #FFFFFF
black = #000000
tray-background = #404552

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/mainbar0]
enable-ipc = true

width = ${env:width}
;width = 100%
height = 32
offset-x = 8
offset-y = 8
monitor = ${env:monitor}
fixed-center = true
bottom = false

background = ${color.background}
foreground = ${color.foreground}

radius = 16.0
;radius-top = 8.0
;radius-bottom = 8.0

line-size = 3
line-color = #f00

;border-size = 0
;border-bottom =1
;border-color = #00000000

;padding = 2
padding-left = 2
;padding-right = 2

module-margin-left = 1
module-margin-right = 1

;module-margin = 1

font-0 = "ShureTechMono Nerd Font:size=14:weight=semibold;3"

modules-center = player player-play-pause
modules-right = cpu memory pulseaudio sysmenu
modules-left = workspace0 date

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-scale = 1.0
tray-background = ${color.background}

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

#####################################################################

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
;format-prefix-foreground = ${color.shade4}
;format-foreground = ${color.modulefg}
;format-background = ${color.shade6}
;format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
;format-prefix-foreground = ${color.foreground-alt}
;format-underline = #4bffdc
;format-foreground = ${color.modulefg}
;format-background = ${color.shade5}
label = %gb_used%/%gb_total%

[module/date]
type = internal/date
interval = 5
time = %H:%M %p
time-alt = %d/%m/%Y %H:%M %p
;format-prefix = 
;format-prefix-foreground = ${color.foreground-alt}
;format-background = ${color.shade2}
;format-foreground = ${color.modulefg}
;format-underline = #0a6cf5
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false
interval = 5

format-volume = <ramp-volume> <label-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 墳
ramp-volume-3 = 

label-muted = 
label-muted-foreground = ${color.modulefg}

click-right = pavucontrol

[module/player]
type = custom/script
tail = true
;format-prefix = ""
format =  <label>
exec = $SCRIPTPATH/scripts/player_scroll_status.sh

[module/player-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo "契"
initial = 1
click-left = playerctl play-pause -p musikcube

[module/sysmenu]
type = custom/text
content = " 襤 "
content-foreground = ${color.foreground}
click-left = arcolinux-logout
click-right = arcolinux-logout
